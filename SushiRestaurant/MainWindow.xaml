<Window x:Class="SushiRestaurant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SushiRestaurant"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Sakana House POS"
        Height="500"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        FontFamily="Segoe UI"
        FontSize="14">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#4A90E2"
                CornerRadius="5"
                Padding="10">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Stretch">
                <TextBlock Text="Sakana House POS"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <TextBlock Text="admin"
                           Foreground="White"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="15,0,10,0"/>
                <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{}{0:MM/dd/yyyy hh:mm tt}'}"
                           Foreground="White"
                           HorizontalAlignment="Right"
                           Margin="15,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Menu Grid -->
        <Grid Grid.Row="1"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Buttons with Hover Effects -->

            <Button x:Name="btnStockList"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Stock List"
                    Background="#6A1B9A"
                    Foreground="White"
                    Margin="10"
                    Padding="15"
                    Click="btnStockList_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor"
                                Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            BorderThickness="1"
                                            BorderBrush="#E0E0E0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter TargetName="Border"
                                                    Property="Background"
                                                    Value="#4A148C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="btnMenu"
                    Grid.Row="0"
                    Grid.Column="1"
                    Content="Menu"
                    Background="#6A1B9A"
                    Foreground="White"
                    Margin="10"
                    Padding="15"
                    Click="btnMenu_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor"
                                Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            BorderThickness="1"
                                            BorderBrush="#E0E0E0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter TargetName="Border"
                                                    Property="Background"
                                                    Value="#4A148C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="btnReports"
                    Grid.Row="0"
                    Grid.Column="2"
                    Content="Reports"
                    Background="#6A1B9A"
                    Foreground="White"
                    Margin="10"
                    Padding="15"
                    Click="btnReports_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor"
                                Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            BorderThickness="1"
                                            BorderBrush="#E0E0E0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter TargetName="Border"
                                                    Property="Background"
                                                    Value="#4A148C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="btnEmployeeAccount"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Employee Account"
                    Background="#6A1B9A"
                    Foreground="White"
                    Margin="10"
                    Padding="15"
                    Click="btnEmployeeAccount_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor"
                                Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            BorderThickness="1"
                                            BorderBrush="#E0E0E0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter TargetName="Border"
                                                    Property="Background"
                                                    Value="#4A148C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="btnOrderList"
                    Grid.Row="1"
                    Grid.Column="1"
                    Content="Order List"
                    Background="#6A1B9A"
                    Foreground="White"
                    Margin="10"
                    Padding="15"
                    Click="btnOrderList_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor"
                                Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            BorderThickness="1"
                                            BorderBrush="#E0E0E0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter TargetName="Border"
                                                    Property="Background"
                                                    Value="#4A148C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>


            <Button x:Name="btnLogout"
                    Grid.Row="1"
                    Grid.Column="2"
                    Content="Logout"
                    Background="#6A1B9A"
                    Foreground="White"
                    Margin="10"
                    Padding="15"
                    Click="btnLogout_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor"
                                Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            BorderThickness="1"
                                            BorderBrush="#E0E0E0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter TargetName="Border"
                                                    Property="Background"
                                                    Value="#4A148C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>