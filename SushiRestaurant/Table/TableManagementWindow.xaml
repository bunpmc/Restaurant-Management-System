<Window x:Class="SushiRestaurant.Table.TableManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Table Management"
        Height="600"
        Width="800"
        Background="#FAFAFA"
        FontFamily="Segoe UI"
        FontSize="14">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Search/Filter -->
            <RowDefinition/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Action buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                Text="Table Management"
                FontSize="20"
                FontWeight="Bold"
                Margin="10,0,0,10"/>
        <StackPanel Grid.Row="0"
                Orientation="Horizontal"
                Background="#FF4A90E2">
            <TextBlock Text="SakanaHouse POS 2.0"
                    Foreground="White"
                    FontSize="20"
                    Margin="10"/>
            <TextBlock Text="admin"
                    Foreground="White"
                    Margin="10"/>
            <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{}{0:MM/dd/yyyy hh:mm tt}'}"
                       Foreground="White"
                    HorizontalAlignment="Right"
                       Margin="15,0"
                    VerticalAlignment="Center"/>
        </StackPanel>
        <!-- Search and Filter -->
        <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                Margin="0,10,0,10">
            <Label Content="Search:"
                    VerticalAlignment="Center"/>
            <TextBox x:Name="SearchBox"
                    Width="200"
                    Margin="5"/>
            <Button Content="Filter"
                    Width="80"
                    Margin="10,0"
                    Background="#0288D1"
                    Foreground="White"/>
        </StackPanel>

        <!-- Table List -->
        <DataGrid Grid.Row="2"
                x:Name="TableGrid"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                  SelectionMode="Single"
                Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                        Binding="{Binding Id}"
                        Width="50"/>
                <DataGridTextColumn Header="Name"
                        Binding="{Binding Name}"
                        Width="150"/>
                <DataGridTextColumn Header="Zone"
                        Binding="{Binding Zone}"
                        Width="100"/>
                <DataGridTextColumn Header="Seats"
                        Binding="{Binding SeatCount}"
                        Width="80"/>
                <DataGridTextColumn Header="Status"
                        Binding="{Binding Status}"
                        Width="100"/>
                <DataGridTextColumn Header="Note"
                        Binding="{Binding Note}"
                        Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Actions -->
        <StackPanel Grid.Row="3"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,10">
            <Button Content="Add Table"
                    Width="100"
                    Margin="5"
                    Background="#4CAF50"
                    Foreground="White"/>
            <Button Content="Edit Table"
                    Width="100"
                    Margin="5"
                    Background="#FFB300"
                    Foreground="White"/>
            <Button Content="Delete Table"
                    Width="100"
                    Margin="5"
                    Background="#D32F2F"
                    Foreground="White"/>
            <Button x:Name="btnBackToMain"
                    Content="Back to Main"
                    Width="120"
                    Margin="5"
                    Background="#6A1B9A"
                    Foreground="White"
                    Click="btnBackToMain_Click"/>
        </StackPanel>
    </Grid>
</Window>
