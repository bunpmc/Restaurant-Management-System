<Window x:Class="SushiRestaurant.SaleRegister.Payment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SushiRestaurant.SaleRegister"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Payment"
        Height="668"
        Width="1048">
    <Window.Resources>
        <Style x:Key="NumPadButtonStyle"
                TargetType="Button">
            <Setter Property="Background"
                    Value="#FF6A1B9A"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontSize"
                    Value="18"/>
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="Height"
                    Value="50"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle"
                TargetType="Button">
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="Padding"
                    Value="15,8"/>
            <Setter Property="Margin"
                    Value="10,5"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F4F4F4"
            Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Background="#2D5DA1"
                Height="50"
                Grid.Row="0"
                HorizontalAlignment="Center"
                Width="1028">
            <TextBlock Text="Sakana House POS 2.0"
                    FontSize="20"
                    FontWeight="Bold"
                       Foreground="White"
                    VerticalAlignment="Center"
                    Margin="15,0"
                       DockPanel.Dock="Left"/>
            <TextBlock Text="admin"
                    Foreground="White"
                    VerticalAlignment="Center"
                    Margin="15,0"
                    DockPanel.Dock="Right"/>
            <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{}{0:MM/dd/yyyy hh:mm tt}'}"
                       Foreground="White"
                    HorizontalAlignment="Right"
                       Margin="15,0"
                    VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1"
                Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <StackPanel Grid.Column="0"
                    Margin="10">
                <TextBlock Text="Payment Information"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="0,0,0,10"/>

                <!-- Payment Details -->
                <UniformGrid Columns="2"
                        Rows="5"
                        Margin="0,0,0,20">
                    <TextBlock Text="Total:"
                            VerticalAlignment="Center"/>
                    <TextBox Text="131.11"
                            IsReadOnly="True"
                            Background="#EEE"
                            Margin="0,5"/>

                    <TextBlock Text="Pay by:"
                            VerticalAlignment="Center"/>
                    <ComboBox SelectedIndex="0"
                            Margin="0,5">
                        <ComboBoxItem Content="Cash"/>
                        <ComboBoxItem Content="Card"/>
                        <ComboBoxItem Content="QR Code"/>
                    </ComboBox>

                    <TextBlock Text="Paid Amount:"
                            VerticalAlignment="Center"/>
                    <TextBox x:Name="PaidAmount"
                            Margin="0,5"/>

                    <TextBlock Text="Discount (%):"
                            VerticalAlignment="Center"/>
                    <TextBox Text="0"
                            IsReadOnly="True"
                            Background="#EEE"
                            Margin="0,5"/>

                    <TextBlock Text="Change Amount:"
                            VerticalAlignment="Center"/>
                    <TextBox x:Name="ChangeAmount"
                            IsReadOnly="True"
                            Background="#EEE"
                            Margin="0,5"/>
                </UniformGrid>

                <!-- Customer Info -->
                <TextBlock Text="Customer Information"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="0,10,0,10"/>
                <UniformGrid Columns="2"
                        Rows="4">
                    <TextBlock Text="Due:"/>
                    <TextBox x:Name="DueAmount"
                            IsReadOnly="True"
                            Background="#EEE"
                            Margin="0,5"/>

                    <TextBlock Text="Date:"/>
                    <TextBox Text="2025-07-25"
                            IsReadOnly="True"
                            Background="#EEE"
                            Margin="0,5"/>

                    <TextBlock Text="Customer ID:"/>
                    <TextBox Text="10000009"
                            IsReadOnly="True"
                            Background="#EEE"
                            Margin="0,5"/>

                    <TextBlock Text="Guest:"/>
                    <TextBox Margin="0,5"/>
                </UniformGrid>

                <TextBlock Text="Comment:"
                        Margin="0,10,0,5"/>
                <TextBox Height="60"/>
            </StackPanel>

            <!-- Right Column -->
            <StackPanel Grid.Column="1"
                    Margin="10">
                <TextBlock Text="Select Table"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="0,0,0,10"/>
                <WrapPanel Width="415">
                    <Button Content="TAB-01"
                            Width="90"
                            Margin="5"/>
                    <Button Content="TAB-02"
                            Width="90"
                            Margin="5"/>
                    <Button Content="TAB-03"
                            Width="90"
                            Margin="5"/>
                    <Button Content="TAB-04"
                            Width="90"
                            Margin="5"/>
                    <Button Content="TAB-05"
                            Width="90"
                            Margin="5"/>
                    <Button Content="TAB-06"
                            Width="90"
                            Margin="5"/>
                    <Button Content="TAB-07"
                            Width="90"
                            Margin="5"/>
                    <Button Content="TAB-OUT"
                            Width="90"
                            Margin="5"/>
                </WrapPanel>

                <TextBlock Text="Enter Amount"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="0,20,0,10"/>
                <UniformGrid Columns="3"
                        Rows="4"
                        Height="264"
                        Width="373">
                    <Button Content="1"
                            Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="2"
                            Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="3"
                            Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="4"
                            Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="5"
                            Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="6"
                            Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="7"
                            Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="8"
                            Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="9"
                            Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="0"
                            Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="Clear"
                            Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="Enter"
                            Style="{StaticResource NumPadButtonStyle}"/>
                </UniformGrid>
            </StackPanel>
        </Grid>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,10">
            <Button Content="Back"
                    Background="#C62828"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Save"
                    Background="#2E7D32"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Print"
                    Background="#0277BD"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button x:Name="btnBackToMain"
                    Content="Back to Main"
                    Background="#6A1B9A"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="btnBackToMain_Click"/>
        </StackPanel>
    </Grid>
</Window>
