<Window x:Class="SushiRestaurant.SaleRegister.InvoicePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SushiRestaurant.SaleRegister"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="InvoicePage"
        Height="450"
        Width="760">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Body -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0"
                Margin="0,0,0,10"
                HorizontalAlignment="Center">
            <TextBlock Text="SAKANA HOUSE POS 2.0"
                    FontSize="16"
                    FontWeight="Bold"
                    TextAlignment="Center"/>
            <TextBlock Text="INVOICE"
                    FontSize="14"
                    FontWeight="Bold"
                    TextAlignment="Center"
                    Margin="0,5,0,0"/>
            <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{}{0:MM/dd/yyyy hh:mm tt}'}"
                       Foreground="White"
                    HorizontalAlignment="Right"
                       Margin="15,0"
                    VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Column Headers -->
            <Grid Grid.Row="0"
                    Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Item"
                        FontWeight="Bold"/>
                <TextBlock Text="Quantity"
                        Grid.Column="1"
                        FontWeight="Bold"
                        TextAlignment="Center"/>
                <TextBlock Text="Price"
                        Grid.Column="2"
                        FontWeight="Bold"
                        TextAlignment="Right"/>
            </Grid>

            <!-- Invoice Items -->
            <StackPanel Grid.Row="1">
                <ItemsControl>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Item}"/>
                                <TextBlock Text="{Binding Quantity}"
                                        Grid.Column="1"
                                        TextAlignment="Center"/>
                                <TextBlock Text="{Binding Price}"
                                        Grid.Column="2"
                                        TextAlignment="Right"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.Items>
                        <sys:String>California Roll | 1 | 4.99</sys:String>
                        <sys:String>Spicy Tuna Roll | 1 | 5.49</sys:String>
                    </ItemsControl.Items>
                </ItemsControl>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2"
                Margin="0,10,0,0"
                HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal"
                    Margin="0,2">
                <TextBlock Text="Subtotal: "
                        Width="100"/>
                <TextBlock Text="$10.48"
                        FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                    Margin="0,2">
                <TextBlock Text="Discount: "
                        Width="100"/>
                <TextBlock Text="$0.50"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                    Margin="0,2">
                <TextBlock Text="Tax: "
                        Width="100"/>
                <TextBlock Text="$0.50"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                    Margin="0,2">
                <TextBlock Text="Total Payable: "
                        Width="100"/>
                <TextBlock Text="$10.98"
                        FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                    Margin="0,2">
                <TextBlock Text="Paid: "
                        Width="100"/>
                <TextBlock Text="$20.00"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                    Margin="0,2">
                <TextBlock Text="Change: "
                        Width="100"/>
                <TextBlock Text="$9.02"
                        FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,20,0,0">
            <Button Content="Print"
                    Width="100"
                    Margin="5"
                    Background="#1976D2"
                    Foreground="White"
                    Padding="10,5"/>
            <Button Content="Save"
                    Width="100"
                    Margin="5"
                    Background="#4CAF50"
                    Foreground="White"
                    Padding="10,5"/>
            <Button x:Name="btnBackToMain"
                    Content="Back to Main"
                    Width="120"
                    Margin="5"
                    Background="#6A1B9A"
                    Foreground="White"
                    Padding="10,5"
                    Click="btnBackToMain_Click"/>
        </StackPanel>
    </Grid>
</Window>
