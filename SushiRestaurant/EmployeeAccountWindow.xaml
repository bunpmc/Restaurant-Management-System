<Window x:Class="SushiRestaurant.EmployeeAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Account Management"
        Height="500"
        Width="1000"
        Background="#FAFAFA"
        FontFamily="Segoe UI"
        FontSize="14">

        <Grid Margin="20">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="Auto"/>
                        <!-- Title -->
                        <RowDefinition Height="*"/>
                        <!-- Main Content -->
                        <RowDefinition Height="Auto"/>
                        <!-- Status Bar -->
                        <RowDefinition Height="Auto"/>
                        <!-- Buttons -->
                </Grid.RowDefinitions>

                <!-- Top Bar -->
                <DockPanel Grid.Row="0"
                           Background="#FF4A90E2"
                           Height="40">
                        <TextBlock Text="SakanaHouse POS 2.0"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="10,0"
                                   VerticalAlignment="Center"
                                   DockPanel.Dock="Left"/>
                        <TextBlock Text="admin"
                                   Foreground="White"
                                   Margin="10,0"
                                   VerticalAlignment="Center"
                                   DockPanel.Dock="Left"/>
                        <TextBlock Text="{Binding Path=CurrentDateTime, StringFormat='{}{0:MM/dd/yyyy hh:mm tt}'}"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   Margin="15,0"
                                   VerticalAlignment="Center"/>
                </DockPanel>

                <!-- Title and Add Button -->
                <Grid Grid.Row="1"
                      Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Employee Accounts"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>

                        <Button x:Name="btnAddNew"
                                Grid.Column="1"
                                Content="Add New Employee"
                                Width="150"
                                Height="35"
                                Background="#4CAF50"
                                Foreground="White"
                                FontWeight="Bold"
                                Click="btnAddNew_Click"/>
                </Grid>

                <!-- DataGrid and Form Side-by-Side -->
                <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel: Search and DataGrid -->
                        <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Search Box -->
                                <Grid Grid.Row="0"
                                      Margin="0,0,10,10">
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="Search:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>

                                        <TextBox x:Name="txtSearch"
                                                 Grid.Column="1"
                                                 Height="30"
                                                 VerticalAlignment="Center"
                                                 TextChanged="txtSearch_TextChanged"
                                                 ToolTip="Search by name, username, email, or role"/>

                                        <Button x:Name="btnClearSearch"
                                                Grid.Column="2"
                                                Content="Clear"
                                                Width="60"
                                                Height="30"
                                                Margin="5,0,0,0"
                                                Click="btnClearSearch_Click"/>
                                </Grid>

                                <!-- DataGrid -->
                                <DataGrid x:Name="EmployeeAccountGrid"
                                          Grid.Row="1"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          SelectionMode="Single"
                                          HeadersVisibility="Column"
                                          IsReadOnly="True"
                                          Margin="0,0,10,0">
                                        <DataGrid.Columns>
                                                <DataGridTextColumn Header="ID"
                                                                    Binding="{Binding Id}"
                                                                    Width="50"/>
                                                <DataGridTextColumn Header="Username"
                                                                    Binding="{Binding Username}"
                                                                    Width="100"/>
                                                <DataGridTextColumn Header="Role"
                                                                    Binding="{Binding Role}"
                                                                    Width="50"/>
                                                <DataGridTextColumn Header="Full Name"
                                                                    Binding="{Binding FullName}"
                                                                    Width="200"/>
                                                <DataGridTextColumn Header="Email"
                                                                    Binding="{Binding Email}"
                                                                    Width="150"/>
                                                <DataGridCheckBoxColumn Header="Active"
                                                                        Binding="{Binding IsActive}"
                                                                        Width="80"/>
                                        </DataGrid.Columns>
                                </DataGrid>
                        </Grid>

                        <!-- Right Panel: Form -->
                        <StackPanel x:Name="formPanel"
                                    Grid.Column="1"
                                    Margin="0,0,0,0">
                                <TextBlock Text="Employee Details"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>
                                <Grid>
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Text="Username:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox x:Name="txtUsername"
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 Width="200"
                                                 Margin="5,0"/>
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Text="Password:"
                                                   VerticalAlignment="Center"
                                                   x:Name="lblPassword"/>
                                        <TextBox x:Name="txtPasswordHash"
                                                 Grid.Row="1"
                                                 Grid.Column="1"
                                                 Width="200"
                                                 Margin="5,0"
                                                 ToolTip="Only required for Cashier role"/>
                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="0"
                                                   Text="Full Name:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox x:Name="txtFullName"
                                                 Grid.Row="2"
                                                 Grid.Column="1"
                                                 Width="200"
                                                 Margin="5,0"/>
                                        <TextBlock Grid.Row="3"
                                                   Grid.Column="0"
                                                   Text="Email:"
                                                   VerticalAlignment="Center"/>
                                        <TextBox x:Name="txtEmail"
                                                 Grid.Row="3"
                                                 Grid.Column="1"
                                                 Width="200"
                                                 Margin="5,0"/>
                                        <TextBlock Grid.Row="4"
                                                   Grid.Column="0"
                                                   Text="Role:"
                                                   VerticalAlignment="Center"/>
                                        <ComboBox x:Name="cmbRole"
                                                  Grid.Row="4"
                                                  Grid.Column="1"
                                                  Width="200"
                                                  Margin="5,0">
                                                <ComboBoxItem Content="Admin"/>
                                                <ComboBoxItem Content="Manager"/>
                                                <ComboBoxItem Content="Cashier"/>
                                                <ComboBoxItem Content="Waiter"/>
                                                <ComboBoxItem Content="Chef"/>
                                        </ComboBox>
                                        <TextBlock Grid.Row="5"
                                                   Grid.Column="0"
                                                   Text="Active:"
                                                   VerticalAlignment="Center"/>
                                        <CheckBox x:Name="chkIsActive"
                                                  Grid.Row="5"
                                                  Grid.Column="1"
                                                  VerticalAlignment="Center"
                                                  Margin="5,0"/>
                                </Grid>

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Margin="0,10,0,0">
                                        <Button x:Name="btnSave"
                                                Content="Save"
                                                Width="80"
                                                Margin="5"
                                                Background="#4CAF50"
                                                Foreground="White"
                                                Click="btnSave_Click"/>
                                        <Button x:Name="btnCancel"
                                                Content="Cancel"
                                                Width="80"
                                                Margin="5"
                                                Background="#D32F2F"
                                                Foreground="White"
                                                Click="btnCancel_Click"/>
                                </StackPanel>
                        </StackPanel>
                </Grid>

                <!-- Status Bar -->
                <Border Grid.Row="3"
                        Background="#F5F5F5"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,1,0,0"
                        Padding="10,5">
                        <Grid>
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="txtStatus"
                                           Grid.Column="0"
                                           Text="Ready"
                                           VerticalAlignment="Center"/>

                                <TextBlock x:Name="txtEmployeeCount"
                                           Grid.Column="1"
                                           Text="Total: 0 employees"
                                           VerticalAlignment="Center"/>
                        </Grid>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                        <Button x:Name="btnActivate"
                                Content="Reactivate"
                                Width="100"
                                Margin="5"
                                Background="#4CAF50"
                                Foreground="White"
                                Click="btnActivate_Click"/>
                        <Button x:Name="btnDeactivate"
                                Content="Deactivate"
                                Width="100"
                                Margin="5"
                                Background="#D32F2F"
                                Foreground="White"
                                Click="btnDeactivate_Click"/>
                        <Button x:Name="btnResetPassword"
                                Content="Reset Password"
                                Width="150"
                                Margin="5"
                                Background="#1976D2"
                                Foreground="White"
                                Click="btnResetPassword_Click"/>
                        <Button x:Name="btnBackToMain"
                                Content="Back to Main"
                                Width="120"
                                Margin="5"
                                Background="#6A1B9A"
                                Foreground="White"
                                Click="btnBackToMain_Click"/>
                </StackPanel>
        </Grid>
</Window>
