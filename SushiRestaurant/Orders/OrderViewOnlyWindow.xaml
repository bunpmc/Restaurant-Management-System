<Window x:Class="SushiRestaurant.Orders.OrderViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Order View - Sakana House POS"
        Height="600"
        Width="1000"
        Background="#FAFAFA"
        FontFamily="Segoe UI"
        FontSize="14">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Order Grid -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0"
                   Background="#FF4A90E2"
                   Height="50">
            <TextBlock Text="SakanaHouse POS 2.0"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="15,0"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"/>
            <TextBlock Text="admin"
                       Foreground="White"
                       Margin="15,0"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"/>
            <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='{}{0:MM/dd/yyyy hh:mm tt}'}"
                       Foreground="White"
                       HorizontalAlignment="Right"
                       Margin="15,0"
                       VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Order Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Orders Column 1 -->
            <ItemsControl Grid.Column="0" 
                         Margin="5"
                         x:Name="OrdersColumn1"
                         ItemsSource="{Binding OrdersColumn1}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" 
                               BorderThickness="1" 
                               Margin="2" 
                               Padding="5" 
                               Background="#FFF3E0">
                            <StackPanel>
                                <TextBlock Text="{Binding TimeStamp, StringFormat='{}{0:HH:mm}'}" 
                                          FontWeight="Bold" 
                                          Foreground="#757575"/>
                                <ItemsControl ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" 
                                                      Margin="0,2,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="Black"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Orders Column 2 -->
            <ItemsControl Grid.Column="1" 
                         Margin="5"
                         x:Name="OrdersColumn2"
                         ItemsSource="{Binding OrdersColumn2}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" 
                               BorderThickness="1" 
                               Margin="2" 
                               Padding="5" 
                               Background="#FFF3E0">
                            <StackPanel>
                                <TextBlock Text="{Binding TimeStamp, StringFormat='{}{0:HH:mm}'}" 
                                          FontWeight="Bold" 
                                          Foreground="#757575"/>
                                <ItemsControl ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" 
                                                      Margin="0,2,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="Black"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Orders Column 3 -->
            <ItemsControl Grid.Column="2" 
                         Margin="5"
                         x:Name="OrdersColumn3"
                         ItemsSource="{Binding OrdersColumn3}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" 
                               BorderThickness="1" 
                               Margin="2" 
                               Padding="5" 
                               Background="#FFF3E0">
                            <StackPanel>
                                <TextBlock Text="{Binding TimeStamp, StringFormat='{}{0:HH:mm}'}" 
                                          FontWeight="Bold" 
                                          Foreground="#757575"/>
                                <ItemsControl ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" 
                                                      Margin="0,2,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="Black"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</Window>