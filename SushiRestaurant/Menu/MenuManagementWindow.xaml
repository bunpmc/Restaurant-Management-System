<Window x:Class="SushiRestaurant.Menu.MenuManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Menu Management"
        Height="600"
        Width="1000"
        Background="#FAFAFA"
        FontFamily="Segoe UI"
        FontSize="14">

        <Grid Margin="10">
                <!-- Khai báo 2 hàng: 1 cho header, 1 cho nội dung -->
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="*"/>
                        <!-- Nội dung chính -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <DockPanel Grid.Row="0"
                           Background="#FF4A90E2"
                           Height="40"
                           VerticalAlignment="Top">
                        <TextBlock Text="SakanaHouse POS 2.0"
                                   Foreground="White"
                                   FontSize="18"
                                   Margin="10,0"
                                   VerticalAlignment="Center"
                                   DockPanel.Dock="Left"/>
                        <TextBlock Text="admin"
                                   Foreground="White"
                                   Margin="10,0"
                                   VerticalAlignment="Center"
                                   DockPanel.Dock="Left"/>
                        <TextBlock Text="{Binding Path=CurrentDateTime, StringFormat='{}{0:MM/dd/yyyy hh:mm tt}'}"
                                   Foreground="White"
                                   HorizontalAlignment="Right"
                                   Margin="15,0"
                                   VerticalAlignment="Center"/>
                </DockPanel>

                <!-- Nội dung chính -->
                <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Menu List -->
                        <StackPanel Grid.Column="0"
                                    Margin="0,0,10,0">
                                <TextBlock Text="Menus"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>
                                <ListBox x:Name="MenuList"
                                         DisplayMemberPath="Name"
                                         Height="400"/>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,10,0,0">
                                        <Button x:Name="btnAddMenu"
                                                Content="Add Menu"
                                                Width="80"
                                                Margin="5"
                                                Background="#4CAF50"
                                                Foreground="White"/>
                                        <Button x:Name="btnEditMenu"
                                                Content="Edit"
                                                Width="60"
                                                Margin="5"
                                                Background="#FFB300"
                                                Foreground="White"/>
                                        <Button x:Name="btnDeleteMenu"
                                                Content="Delete"
                                                Width="80"
                                                Margin="5"
                                                Background="#D32F2F"
                                                Foreground="White"/>
                                </StackPanel>
                        </StackPanel>

                        <!-- Right: Menu Items -->
                        <StackPanel Grid.Column="1">
                                <TextBlock Text="Menu Items"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>
                                <DataGrid x:Name="MenuItemGrid"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          Height="400"
                                          SelectionMode="Single"
                                          Margin="0,0,0,10">
                                        <DataGrid.Columns>
                                                <DataGridTextColumn Header="ID"
                                                                    Binding="{Binding Id}"
                                                                    Width="50"/>
                                                <DataGridTextColumn Header="Name"
                                                                    Binding="{Binding Name}"
                                                                    Width="150"/>
                                                <DataGridTextColumn Header="Price"
                                                                    Binding="{Binding Price, StringFormat=C}"
                                                                    Width="100"/>
                                                <DataGridTextColumn Header="Category"
                                                                    Binding="{Binding Category.Name}"
                                                                    Width="100"/>
                                                <DataGridCheckBoxColumn Header="Available"
                                                                        Binding="{Binding IsAvailable}"
                                                                        Width="80"/>
                                                <DataGridTextColumn Header="Description"
                                                                    Binding="{Binding Description}"
                                                                    Width="*"/>
                                        </DataGrid.Columns>
                                </DataGrid>

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                        <Button x:Name="btnAddItem"
                                                Content="Add Item"
                                                Width="100"
                                                Margin="5"
                                                Background="#4CAF50"
                                                Foreground="White"/>
                                        <Button x:Name="btnEditItem"
                                                Content="Edit Item"
                                                Width="100"
                                                Margin="5"
                                                Background="#FFB300"
                                                Foreground="White"/>
                                        <Button x:Name="btnDeleteItem"
                                                Content="Delete Item"
                                                Width="100"
                                                Margin="5"
                                                Background="#D32F2F"
                                                Foreground="White"/>
                                        <Button x:Name="btnBackToMain"
                                                Content="Back to Main"
                                                Width="120"
                                                Margin="5"
                                                Background="#6A1B9A"
                                                Foreground="White"
                                                Click="btnBackToMain_Click"/>
                                </StackPanel>
                        </StackPanel>
                </Grid>
        </Grid>
</Window>